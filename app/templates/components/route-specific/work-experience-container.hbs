{{#layouts/restricted/page-wrapper class="work-experience"}}
  	{{#layouts/content-wrapper title='Work Experience'}}
  		{{#custom-elements/in-page-alert type='info'}}
  			Each item under work experience has been tagged with the required skills that pertain most closely to it. These tags can be clicked in order to see all of the work experience items which pertain to that particular skill.
  		{{/custom-elements/in-page-alert}}
        {{#each session.workExperienceItems as |item index|}}
          {{#custom-elements/animated-accordion title=item.title index=index}}
            {{recurring-content/work-experience/work-experience-base item=item}}
          {{/custom-elements/animated-accordion}}
        {{/each}}
        
  	{{/layouts/content-wrapper}}
{{/layouts/restricted/page-wrapper}}